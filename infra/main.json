{
  "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.39.26.7824",
      "templateHash": "7376044349705572644"
    }
  },
  "parameters": {
    "environment": {
      "type": "string",
      "allowedValues": [
        "dev",
        "uat",
        "prod"
      ],
      "metadata": {
        "description": "Environment name (dev, uat, prod)"
      }
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "Azure region for all resources"
      }
    },
    "workloadName": {
      "type": "string",
      "minLength": 3,
      "maxLength": 20,
      "metadata": {
        "description": "Workload name used for resource naming"
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": {},
      "metadata": {
        "description": "Tags to apply to all resources"
      }
    },
    "documentDbAdminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "DocumentDB admin password"
      }
    },
    "documentDbComputeTier": {
      "type": "string",
      "defaultValue": "M10",
      "allowedValues": [
        "M10",
        "M20",
        "M30",
        "M40",
        "M50",
        "M60",
        "M80",
        "M200",
        "M250",
        "M300"
      ],
      "metadata": {
        "description": "DocumentDB compute tier"
      }
    },
    "documentDbStorageSizeGb": {
      "type": "int",
      "defaultValue": 32,
      "minValue": 32,
      "maxValue": 512,
      "metadata": {
        "description": "DocumentDB storage size in GB"
      }
    },
    "documentDbEnableHighAvailability": {
      "type": "bool",
      "defaultValue": false,
      "metadata": {
        "description": "Enable DocumentDB high availability"
      }
    }
  },
  "variables": {
    "resourceGroupName": "[format('rg-{0}-{1}', parameters('workloadName'), parameters('environment'))]",
    "commonTags": "[union(parameters('tags'), createObject('environment', parameters('environment'), 'workload', parameters('workloadName'), 'managedBy', 'bicep'))]",
    "naming": {
      "documentDb": "[format('mongodb-{0}-{1}', parameters('workloadName'), parameters('environment'))]"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2024-03-01",
      "name": "[variables('resourceGroupName')]",
      "location": "[parameters('location')]",
      "tags": "[variables('commonTags')]"
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2025-04-01",
      "name": "[format('documentdb-{0}', uniqueString(deployment().name))]",
      "resourceGroup": "[variables('resourceGroupName')]",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "name": {
            "value": "[variables('naming').documentDb]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "tags": {
            "value": "[variables('commonTags')]"
          },
          "adminPassword": {
            "value": "[parameters('documentDbAdminPassword')]"
          },
          "computeTier": {
            "value": "[parameters('documentDbComputeTier')]"
          },
          "storageSizeGb": {
            "value": "[parameters('documentDbStorageSizeGb')]"
          },
          "enableHighAvailability": {
            "value": "[parameters('documentDbEnableHighAvailability')]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "metadata": {
            "_generator": {
              "name": "bicep",
              "version": "0.39.26.7824",
              "templateHash": "7682370749165307990"
            }
          },
          "parameters": {
            "name": {
              "type": "string",
              "metadata": {
                "description": "Name of the DocumentDB cluster"
              }
            },
            "location": {
              "type": "string",
              "defaultValue": "[resourceGroup().location]",
              "metadata": {
                "description": "Location for the resource"
              }
            },
            "tags": {
              "type": "object",
              "defaultValue": {},
              "metadata": {
                "description": "Tags to apply to the resource"
              }
            },
            "adminUsername": {
              "type": "string",
              "defaultValue": "dbadmin",
              "metadata": {
                "description": "Admin username for the cluster"
              }
            },
            "adminPassword": {
              "type": "securestring",
              "metadata": {
                "description": "Admin password for the cluster (should be from Key Vault)"
              }
            },
            "serverVersion": {
              "type": "string",
              "defaultValue": "8.0",
              "allowedValues": [
                "4.2",
                "5.0",
                "6.0",
                "7.0",
                "8.0"
              ],
              "metadata": {
                "description": "MongoDB server version"
              }
            },
            "shardCount": {
              "type": "int",
              "defaultValue": 1,
              "minValue": 1,
              "maxValue": 3,
              "metadata": {
                "description": "Number of shards in the cluster"
              }
            },
            "storageSizeGb": {
              "type": "int",
              "defaultValue": 32,
              "minValue": 32,
              "maxValue": 512,
              "metadata": {
                "description": "Storage size in GB"
              }
            },
            "computeTier": {
              "type": "string",
              "defaultValue": "M10",
              "allowedValues": [
                "M10",
                "M20",
                "M30",
                "M40",
                "M50",
                "M60",
                "M80",
                "M200",
                "M250",
                "M300"
              ],
              "metadata": {
                "description": "Compute tier (M10, M20, M30, M40, M50, M60, M80, M200, M250, M300)"
              }
            },
            "enableHighAvailability": {
              "type": "bool",
              "defaultValue": false,
              "metadata": {
                "description": "Enable high availability"
              }
            }
          },
          "resources": [
            {
              "type": "Microsoft.DocumentDB/mongoClusters",
              "apiVersion": "2025-09-01",
              "name": "[parameters('name')]",
              "location": "[parameters('location')]",
              "tags": "[parameters('tags')]",
              "properties": {
                "administrator": {
                  "userName": "[parameters('adminUsername')]",
                  "password": "[parameters('adminPassword')]"
                },
                "serverVersion": "[parameters('serverVersion')]",
                "sharding": {
                  "shardCount": "[parameters('shardCount')]"
                },
                "storage": {
                  "sizeGb": "[parameters('storageSizeGb')]"
                },
                "highAvailability": {
                  "targetMode": "[if(parameters('enableHighAvailability'), 'ZoneRedundantPreferred', 'Disabled')]"
                },
                "compute": {
                  "tier": "[parameters('computeTier')]"
                }
              }
            },
            {
              "type": "Microsoft.DocumentDB/mongoClusters/firewallRules",
              "apiVersion": "2025-09-01",
              "name": "[format('{0}/{1}', parameters('name'), 'AllowAllAzureServices')]",
              "properties": {
                "startIpAddress": "0.0.0.0",
                "endIpAddress": "0.0.0.0"
              },
              "dependsOn": [
                "[resourceId('Microsoft.DocumentDB/mongoClusters', parameters('name'))]"
              ]
            }
          ],
          "outputs": {
            "id": {
              "type": "string",
              "value": "[resourceId('Microsoft.DocumentDB/mongoClusters', parameters('name'))]"
            },
            "name": {
              "type": "string",
              "value": "[parameters('name')]"
            },
            "endpoint": {
              "type": "string",
              "value": "[reference(resourceId('Microsoft.DocumentDB/mongoClusters', parameters('name')), '2025-09-01').connectionString]"
            },
            "serverVersion": {
              "type": "string",
              "value": "[reference(resourceId('Microsoft.DocumentDB/mongoClusters', parameters('name')), '2025-09-01').serverVersion]"
            }
          }
        }
      },
      "dependsOn": [
        "[subscriptionResourceId('Microsoft.Resources/resourceGroups', variables('resourceGroupName'))]"
      ]
    }
  ],
  "outputs": {
    "resourceGroupName": {
      "type": "string",
      "value": "[variables('resourceGroupName')]"
    },
    "documentDbName": {
      "type": "string",
      "value": "[reference(extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', subscription().subscriptionId, variables('resourceGroupName')), 'Microsoft.Resources/deployments', format('documentdb-{0}', uniqueString(deployment().name))), '2025-04-01').outputs.name.value]"
    },
    "documentDbEndpoint": {
      "type": "string",
      "value": "[reference(extensionResourceId(format('/subscriptions/{0}/resourceGroups/{1}', subscription().subscriptionId, variables('resourceGroupName')), 'Microsoft.Resources/deployments', format('documentdb-{0}', uniqueString(deployment().name))), '2025-04-01').outputs.endpoint.value]"
    }
  }
}